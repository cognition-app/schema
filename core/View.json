{
  "$id": "https://github.com/cognition-app/schema/core/View",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "The json schema for defining a cognition view.",
  "allOf": [
    {
      "$ref": "https://github.com/cognition-app/schema/base/Implementation"
    },
    {
      "$ref": "https://github.com/cognition-app/schema/base/Identifiable"
    },
    {
      "type": "object",
      "properties": {
        "requiredSettings": {
          "type": "array",
          "description": "A list of pointers to Settings schemas required by this view",
          "items": [
            {
              "$ref": "https://github.com/cognition-app/schema/base/JSONPointer"
            }
          ]
        },
        "supportedDocs": {
          "type": "array",
          "description": "A list of pointers to Document schemas supported by this view",
          "items": [
            {
              "$ref": "https://github.com/cognition-app/schema/base/JSONPointer"
            }
          ]
        }
      }
    }
  ],
  "examples": [
    {
      "$context": "https://github.com/cognition-app/schema/core/View",
      "name": "Dummy",
      "version": "1.0.0",
      "description": "A view which doesn't do much beyond show how a view might work.",
      "supportedDocs": [
        "https://github.com/cognition-app/schema/core/Document"
      ]
    }
  ]
}