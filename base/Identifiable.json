{
  "$id": "https://raw.githubusercontent.com/cognition-app/schema/master/base/Identifiable.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Anything that can be identified in a reasonable way.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The unique name of this identifiable.",
      "examples": [
        "Dummy"
      ]
    },
    "version": {
      "type": "string",
      "description": "The current version of this identifiable.",
      "examples": [
        "1.0.0"
      ]
    },
    "description": {
      "type": "string",
      "description": "An optional description of this identifiable.",
      "examples": [
        "Dummy description"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of string tags which describe this identifiable.",
      "examples": [
        [
          "dummy"
        ]
      ]
    }
  },
  "required": [
    "name"
  ],
  "examples": [
    {
      "name": "Dummy",
      "version": "1.0.0",
      "description": "Dummy description",
      "tags": [
        "dummy"
      ]
    }
  ]
}